<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5sp"
    android:elevation="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintEnd_toStartOf="@+id/img_edit_product"
            android:layout_marginRight="5sp"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20sp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_price_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintEnd_toStartOf="@+id/img_edit_product"
            android:layout_marginRight="5sp"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_product"
            android:layout_marginTop="10sp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_count_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintEnd_toStartOf="@+id/img_edit_product"
            android:layout_marginRight="5sp"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_product"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:textSize="13sp"/>

        <ImageButton
            android:id="@+id/img_delete_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_background_white"/>

        <ImageButton
            android:id="@+id/img_edit_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toStartOf="@+id/img_delete_product"
            android:layout_marginRight="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_background_white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
